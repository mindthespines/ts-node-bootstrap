{
  "name": "ts-node-bootstrap",
  "version": "1.0.0",
  "description": "A template repository for Node TypeScript projects",
  "main": "dist/main.js",
  "scripts": {
    "build": "rimraf ./dist && tsc",
    "build:watch": "rimraf ./dist && tsc --watch --preserveWatchOutput",
    "start": "node dist/main.js",
    "start:watch": "nodemon dist/main.js",
    "dev": "npm run build && npm run start",
    "dev:watch": "concurrently -c cyan,magenta \"npm run build:watch\" \"wait-on dist/main.js && npm run start:watch\"",
    "test": "jest --verbose",
    "test:watch": "jest --watch --verbose",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format:fix": "prettier --write .",
    "fix": "npm run format:fix && npm run lint:fix"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/dist"
    ]
  },
  "author": "spiney",
  "license": "MIT",
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.2",
    "@types/jest": "^29.2.4",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "concurrently": "^7.6.0",
    "eslint": "^8.36.0",
    "jest": "^29.3.1",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.7",
    "rimraf": "^4.4.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "tslib": "^2.5.0",
    "typescript": "^5.0.2",
    "wait-on": "^7.0.1"
  }
}
