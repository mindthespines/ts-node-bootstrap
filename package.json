{
  "name": "ts-node-bootstrap",
  "version": "1.0.0",
  "description": "A template repository for Node TypeScript projects",
  "main": "dist/main.js",
  "scripts": {
    "build": "rimraf ./dist && tsc",
    "build:watch": "rimraf ./dist && tsc --watch --preserveWatchOutput",
    "start": "node dist/main.js",
    "start:watch": "nodemon dist/main.js",
    "dev": "npm run build && npm run start",
    "dev:watch": "concurrently -c cyan,magenta \"npm run build:watch\" \"wait-on dist/main.js && npm run start:watch\"",
    "test": "jest --verbose",
    "test:watch": "jest --watch --verbose",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format:fix": "prettier --write .",
    "fix": "npm run format:fix && npm run lint:fix"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/dist"
    ]
  },
  "author": "spiney",
  "license": "MIT",
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.3",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.8.3",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.7.4",
    "concurrently": "^8.2.1",
    "eslint": "^8.51.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2",
    "wait-on": "^7.0.1"
  }
}
